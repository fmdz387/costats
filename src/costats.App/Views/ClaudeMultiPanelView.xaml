<UserControl x:Class="costats.App.Views.ClaudeMultiPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:costats.App">

    <UserControl.Resources>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E1B2E" />
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#4A4760" />
        <SolidColorBrush x:Key="TextMutedBrush" Color="#7A7890" />
        <SolidColorBrush x:Key="TextFaintBrush" Color="#9A98A8" />
        <SolidColorBrush x:Key="DividerBrush" Color="#D0CDE0" />
        <SolidColorBrush x:Key="TrackBrush" Color="#D8D5E8" />
        <SolidColorBrush x:Key="SessionAccent" Color="#F59E0B" />
        <SolidColorBrush x:Key="WeeklyAccent" Color="#8B5CF6" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <Style x:Key="CompactProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="6" />
            <Setter Property="Background" Value="{StaticResource TrackBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border x:Name="PART_Track" CornerRadius="3" Background="{TemplateBinding Background}" />
                            <Border x:Name="PART_Indicator" CornerRadius="3" HorizontalAlignment="Left" Background="{TemplateBinding Foreground}">
                                <Border.Width>
                                    <MultiBinding Converter="{x:Static local:ProgressWidthConverter.Instance}">
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Value" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="Maximum" />
                                        <Binding RelativeSource="{RelativeSource TemplatedParent}" Path="ActualWidth" />
                                    </MultiBinding>
                                </Border.Width>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Summary bar -->
        <Border Padding="8,6" Margin="0,0,0,10" CornerRadius="6" Background="#0A6366F1">
            <DockPanel>
                <TextBlock Text="{Binding MulticcSummary}" FontSize="11" FontWeight="Medium"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           AutomationProperties.Name="Multicc profile summary" />
                <TextBlock Text="{Binding UpdatedLabel}" FontSize="10"
                           Foreground="{StaticResource TextFaintBrush}"
                           DockPanel.Dock="Right" HorizontalAlignment="Right" />
            </DockPanel>
        </Border>

        <!-- Scrollable stacked profile cards -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="460"
                      Focusable="False">
            <ItemsControl ItemsSource="{Binding ClaudeProfiles}"
                          Focusable="False">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,8" Padding="10,8" CornerRadius="6"
                                Background="#08000000" BorderBrush="{StaticResource DividerBrush}" BorderThickness="1"
                                AutomationProperties.Name="{Binding DisplayName}">
                            <StackPanel>
                                <!-- Header row: Profile name + Plan badge + Status indicator -->
                                <DockPanel Margin="0,0,0,6">
                                    <TextBlock Text="{Binding DisplayName}" FontSize="13" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" />

                                    <!-- Status dot -->
                                    <Ellipse Width="8" Height="8" DockPanel.Dock="Right" Margin="8,0,0,0"
                                             VerticalAlignment="Center"
                                             AutomationProperties.Name="{Binding OverallStatusText}">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding OverallStatusColor}" />
                                        </Ellipse.Fill>
                                    </Ellipse>

                                    <!-- Status text (accessibility: not color-only) -->
                                    <TextBlock Text="{Binding OverallStatusText}" FontSize="9"
                                               DockPanel.Dock="Right" VerticalAlignment="Center"
                                               Margin="4,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{StaticResource TextFaintBrush}" />
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Plan chip -->
                                    <Border DockPanel.Dock="Right" CornerRadius="3" Padding="5,1" Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            BorderBrush="#F97316" BorderThickness="1">
                                        <Border.Background>
                                            <SolidColorBrush Color="#F97316" Opacity="0.12" />
                                        </Border.Background>
                                        <TextBlock Text="{Binding PlanText}" FontSize="9" FontWeight="SemiBold" Foreground="#C2410C" />
                                    </Border>
                                </DockPanel>

                                <!-- Session progress bar -->
                                <DockPanel Margin="0,0,0,4">
                                    <TextBlock Text="Session" FontSize="10" Width="48"
                                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding SessionResetText}" FontSize="9"
                                               Foreground="{StaticResource TextFaintBrush}"
                                               DockPanel.Dock="Right" HorizontalAlignment="Right"
                                               VerticalAlignment="Center" Margin="6,0,0,0" />
                                    <TextBlock Text="{Binding SessionUsageLabel}" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               DockPanel.Dock="Right" HorizontalAlignment="Right"
                                               VerticalAlignment="Center" Margin="6,0,0,0" />
                                    <ProgressBar Value="{Binding SessionProgress}" Maximum="1"
                                                 Foreground="{StaticResource SessionAccent}"
                                                 Style="{StaticResource CompactProgressBar}"
                                                 VerticalAlignment="Center"
                                                 AutomationProperties.Name="{Binding SessionUsageLabel}" />
                                </DockPanel>

                                <!-- Weekly progress bar -->
                                <DockPanel>
                                    <TextBlock Text="Weekly" FontSize="10" Width="48"
                                               Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding WeekResetText}" FontSize="9"
                                               Foreground="{StaticResource TextFaintBrush}"
                                               DockPanel.Dock="Right" HorizontalAlignment="Right"
                                               VerticalAlignment="Center" Margin="6,0,0,0" />
                                    <TextBlock Text="{Binding WeekUsageLabel}" FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               DockPanel.Dock="Right" HorizontalAlignment="Right"
                                               VerticalAlignment="Center" Margin="6,0,0,0" />
                                    <ProgressBar Value="{Binding WeekProgress}" Maximum="1"
                                                 Foreground="{StaticResource WeeklyAccent}"
                                                 Style="{StaticResource CompactProgressBar}"
                                                 VerticalAlignment="Center"
                                                 AutomationProperties.Name="{Binding WeekUsageLabel}" />
                                </DockPanel>

                                <!-- Extra usage (overage) if available -->
                                <TextBlock Text="{Binding ExtraUsageLabel}" FontSize="10"
                                           Foreground="{StaticResource TextFaintBrush}" Margin="0,4,0,0"
                                           Visibility="{Binding HasExtraUsage, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
